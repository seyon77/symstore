{% extends 'base.html.twig' %}

{% block title %}Symstore : les Categories{% endblock %}

{% block body %}
    <h1 class="text-center bg-primary text-light mt-3">les Categories</h1>
    <table class="table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Nom</th>
        <th scope="col">Description</th>
        <th colspan="2"class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
    {%if categories is not empty %}
    {% for cat in categories %}
    <tr>
        <th scope="row">{{cat.id}}</th>
        <td>{{cat.nom}}</td>
        <td>{{cat.description}}</td>
        <td><a href="" class ="btn btn-warning">modifier</a></td>
        <td><a href="" class ="btn btn-danger">Supprimer</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h3>Aucune Categorie disponible</h3>
    {% endif %}
    <a href="{{path('app_home')}}" class="btn btn-primary">Retour Acceuil</a>
    {% endblock %}